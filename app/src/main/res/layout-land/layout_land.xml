<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="24dp"
            android:weightSum="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/teamA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/TeamA"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/scoreA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:text="@string/ScoreA"
                android:textSize="40sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/add3A"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"

                    android:gravity="center"
                    android:onClick="pressAdd3_A"
                    android:text="@string/Add3"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/add2A"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"

                    android:gravity="center"
                    android:onClick="pressAdd2_A"
                    android:text="@string/Add2"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/throwA"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:onClick="throwA"
                    android:text="@string/FreeA"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@android:color/black"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/teamB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/TeamB"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/scoreB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:text="@string/ScoreB"
                android:textSize="40sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/add3B"
                    android:layout_width="82dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"

                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="pressAdd3_B"
                    android:text="@string/Add3"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/add2B"
                    android:layout_width="82dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="pressAdd2_B"
                    android:text="@string/Add2"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/throwB"
                    android:layout_width="82dp"

                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="throwB"
                    android:text="@string/FreeA"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:onClick="Reset"
        android:text="@string/reset"
        android:textSize="35sp" />

</RelativeLayout>